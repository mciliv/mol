{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "ğŸš€ Full App Debug",
      "configurations": ["ğŸ”§ Dev Server (with tests)", "ğŸŒ Chrome Browser"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "development"
      }
    }
  ],
  "configurations": [
    // ==================== DEVELOPMENT ====================
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ”§ Dev Server (with tests)",
      "program": "${workspaceFolder}/run",
      "args": ["dev"],
      "console": "integratedTerminal",
      "restart": true,
      "presentation": {
        "hidden": false,
        "group": "development",
        "order": 1
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ­ Production Server",
      "program": "${workspaceFolder}/run",
      "args": ["server"],
      "console": "integratedTerminal",
      "restart": true,
      "presentation": {
        "hidden": false,
        "group": "development",
        "order": 2
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ› Debug Server",
      "program": "${workspaceFolder}/run",
      "args": ["debug"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "development",
        "order": 3
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ§¹ Cleanup Processes",
      "program": "${workspaceFolder}/run",
      "args": ["cleanup"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "development",
        "order": 4
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "ğŸ”— Attach to Running Server",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": ".",
      "presentation": {
        "hidden": false,
        "group": "development",
        "order": 5
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "ğŸŒ Chrome Browser",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "presentation": {
        "hidden": false,
        "group": "development",
        "order": 6
      }
    },

    // ==================== TESTING ====================
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ§ª All Tests",
      "program": "${workspaceFolder}/run",
      "args": ["test"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 1
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "âš™ï¸ Unit Tests",
      "program": "${workspaceFolder}/run",
      "args": ["unit"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 2
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ”— Integration Tests",
      "program": "${workspaceFolder}/run",
      "args": ["integration"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 3
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ–¥ï¸ System Tests",
      "program": "${workspaceFolder}/run",
      "args": ["system"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 4
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ‘€ Watch Tests",
      "program": "${workspaceFolder}/run",
      "args": ["watch"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 5
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ“‹ Fixture Tests",
      "program": "${workspaceFolder}/run",
      "args": ["fixtures"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 6
      }
    },

    // ==================== PYTHON TESTING ====================
    {
      "type": "debugpy",
      "request": "launch",
      "name": "ğŸ Python Tests",
      "module": "pytest",
      "args": ["tests/", "-v"],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "presentation": {
        "hidden": false,
        "group": "python",
        "order": 1
      }
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "ğŸ› Python Tests (Debug)",
      "module": "debugpy",
      "args": ["--listen", "5678", "--wait-for-client", "-m", "pytest", "tests/", "-v", "-s"],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "presentation": {
        "hidden": false,
        "group": "python",
        "order": 2
      }
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "ğŸ Debug Current Python File",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "presentation": {
        "hidden": false,
        "group": "python",
        "order": 3
      }
    },

    // ==================== DEPLOYMENT ====================
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸš¢ Ship (Complete Workflow)",
      "program": "${workspaceFolder}/run",
      "args": ["ship"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "deployment",
        "order": 1
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "â˜ï¸ Deploy",
      "program": "${workspaceFolder}/run",
      "args": ["deploy"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "deployment",
        "order": 2
      }
    }
    {
      "type": "node",
      "request": "launch",
      "name": "â˜ï¸ Deploy Now (Gen2)",
      "program": "${workspaceFolder}/run",
      "args": ["deploy:now"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "deployment",
        "order": 3
      }
    },

    // ==================== UTILITIES ====================
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ§¹ Cleanup Processes",
      "program": "${workspaceFolder}/run",
      "args": ["cleanup"],
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "utilities",
        "order": 1
      }
    }
  ]
}
