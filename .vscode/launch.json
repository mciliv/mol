{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Dev Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/api/server.js",
      "console": "integratedTerminal",
      "preLaunchTask": "start-dev-server",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Server",
      "type": "node", 
      "request": "launch",
      "program": "${workspaceFolder}/backend/api/server.js",
      "console": "integratedTerminal",
      "runtimeArgs": ["--inspect-brk"],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
