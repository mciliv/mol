{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/dev",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Server",
      "type": "node", 
      "request": "launch",
      "program": "${workspaceFolder}/backend/api/server.js",
      "console": "integratedTerminal",
      "runtimeArgs": ["--inspect-brk"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Running Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
