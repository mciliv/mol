{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "üöÄ Full Stack Hot Reload Debug",
      "configurations": ["nodemon server.js"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      }
    },
    {
      "name": "üîó Full Stack Attach Debug",
      "configurations": ["Attach to Nodemon"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 2
      }
    },
    {
      "name": "‚ö° Quick Debug (Backend + Frontend)",
      "configurations": ["Attach to Nodemon", "Chrome"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "quick",
        "order": 1
      }
    },
    {
      "name": "üêç Python + Node Debug",
      "configurations": ["Attach to Nodemon", "Python Attach"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "python",
        "order": 1
      }
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "nodemon server.js",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "restart": true,
      "presentation": {
        "hidden": false,
        "group": "main",
        "order": 2
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Node.js Server",
      "program": "${workspaceFolder}/server.js",
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "env": {
        "PY_DEBUG": "1",
        "NODE_ENV": "development"
      },
      "restart": true,
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "presentation": {
        "hidden": false,
        "group": "server",
        "order": 1
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Nodemon",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
      "sourceMaps": true,
      "smartStep": true,
      "presentation": {
        "hidden": false,
        "group": "server",
        "order": 2
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "presentation": {
        "hidden": false,
        "group": "client",
        "order": 1
      }
    },

    {
      "type": "debugpy",
      "request": "launch",
      "name": "Python Debug",
      "module": "pytest",
      "args": ["tests/test_convert.py", "-v"],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "presentation": {
        "hidden": false,
        "group": "python",
        "order": 1
      }
    },
    {
      "type": "debugpy",
      "request": "attach",
      "name": "Python Attach",
      "connect": {
        "host": "127.0.0.1",
        "port": 5678
      },
      "presentation": {
        "hidden": false,
        "group": "python",
        "order": 2
      }
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Python Script Debug",
      "program": "${workspaceFolder}/sdf.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": ["--help"],
      "presentation": {
        "hidden": false,
        "group": "python",
        "order": 3
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand", "--detectOpenHandles", "--watchAll"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "test"
      },
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 1
      }
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Edge Debug",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "presentation": {
        "hidden": false,
        "group": "client",
        "order": 3
      }
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Firefox Debug",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "presentation": {
        "hidden": false,
        "group": "client",
        "order": 4
      }
    }
  ]
}
