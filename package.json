{
  "name": "mol",
  "version": "1.0.0",
  "description": "Molecular analysis app",
  "main": "backend/api/server.js",
  "scripts": {
    "start": "node backend/api/server.js",
    "dev": "node backend/api/dev-server.js",
    "dev:watch": "nodemon --watch backend --ext js,json --exec 'npm run dev'",
    "dev:clean": "pkill -f 'node.*server.js' && npm run dev",
    "dev:simple": "NODE_ENV=development node backend/api/server.js --no-livereload",
    "dev:no-lr": "node backend/api/dev-server.js --no-livereload",
    "dev:https": "node backend/api/dev-server.js --https",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "setup": "npm install && createdb mol_users 2>/dev/null || echo 'Database already exists'",
    "clean": "pkill -f 'node.*server.js' && pkill -f 'livereload' && echo 'Cleaned up processes'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^2.0.0",
    "pg": "^8.11.3",
    "stripe": "^14.7.0",
    "livereload": "^0.9.3",
    "connect-livereload": "^0.6.1",
    "nodemon": "^3.0.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "keywords": ["molecular", "analysis", "chemistry", "3d"],
  "author": "",
  "license": "MIT"
}
