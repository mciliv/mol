{
  "watch": [
    "server.js",
    "schemas.js",
    "*.js",
    "*.json",
    "*.html",
    "*.css"
  ],
  "ignore": [
    "node_modules/**",
    "sdf_files/**",
    "*.jpg",
    "*.png",
    "*.gif",
    "tests/**"
  ],
  "ext": "js,json,html,css",
  "env": {
    "NODE_ENV": "development",
    "PY_DEBUG": "1"
  },
  "exec": "node --inspect server.js",
  "delay": 1000,
  "verbose": true
} 