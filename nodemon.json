{
  "watch": [
    "backend/**/*.js",
    "backend/**/*.json"
  ],
  "ignore": [
    "node_modules/**",
    "frontend/**",
    "**/*.test.js",
    "**/test/**",
    "**/.git/**",
    "**/*.log"
  ],
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development"
  },
  "exec": "node backend/api/server.js",
  "delay": "1000",
  "verbose": true,
  "colours": true
} 