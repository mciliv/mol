#!/bin/bash

echo "ðŸ§¹ Cleaning up all development processes and ports..."
pkill -f "node.*backend/api/server.js" 2>/dev/null || true
pkill -f "nodemon" 2>/dev/null || true
if command -v lsof >/dev/null 2>&1; then
  for port in 8080 3001 35729; do
    pids=$(lsof -ti:$port 2>/dev/null || true)
    if [ ! -z "$pids" ]; then
      echo "ðŸ”„ Freeing port $port (PIDs: $pids)..."
      echo "$pids" | xargs kill -9 2>/dev/null || true
    fi
  done
fi
echo "âœ… Cleanup complete. You can now restart the server." 