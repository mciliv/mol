#!/bin/bash

# Development script for molecular analysis app
# Usage: ./dev [option]

echo "🔧 Molecular Analysis App - Development Options"
echo "=============================================="

case "${1:-default}" in
  "default"|"")
    echo "🚀 Starting development server with LiveReload..."
    npm run dev
    ;;
  "simple")
    echo "🚀 Starting simple development server (no LiveReload)..."
    npm run dev:simple
    ;;
  "watch")
    echo "👀 Starting with nodemon (backend file watching)..."
    npm run dev:watch
    ;;
  "clean")
    echo "🧹 Cleaning up processes and starting fresh..."
    npm run clean
    npm run dev
    ;;
  "no-lr")
    echo "🚀 Starting without LiveReload..."
    npm run dev:no-lr
    ;;
  "https")
    echo "🔒 Starting with HTTPS..."
    npm run dev:https
    ;;
  "setup")
    echo "⚙️ Setting up development environment..."
    npm run setup
    ;;
  "help"|"-h"|"--help")
    echo "Available options:"
    echo "  default  - Start with LiveReload (default)"
    echo "  simple   - Start without LiveReload"
    echo "  watch    - Start with nodemon (backend watching)"
    echo "  clean    - Clean processes and start fresh"
    echo "  no-lr    - Start without LiveReload"
    echo "  https    - Start with HTTPS"
    echo "  setup    - Setup development environment"
    echo "  help     - Show this help"
    echo ""
    echo "Examples:"
    echo "  ./dev          # Start with LiveReload"
    echo "  ./dev simple   # Start without LiveReload"
    echo "  ./dev clean    # Clean and start fresh"
    ;;
  *)
    echo "❌ Unknown option: $1"
    echo "Run './dev help' for available options"
    exit 1
    ;;
esac 